<div style="max-width: 570px; margin: 0 auto;">
  
      <form  action="/user/Account/checkAccount/inputACcount/<%- data_user._id %>?_method=PUT" method="POST" >
          
          <h1 class="h3 mb-3 fw-normal">Please change your password</h1>
      
          <div class="form-floating">
            <input type="text" class="form-control" id="floatingInput" name="userName" value="<%- data_user.userName %> " placeholder="name@example.com" disabled>
            <label for="floatingInput">Username</label>
          </div>
          <div class="form-floating" style="margin-top: 10px;">
            <input type="password" class="form-control"  id="floatingPassword" name="passWord" placeholder="Password" required>
            <label for="floatingPassword">Password</label>
          </div>
          <div class="form-floating" style="margin: 10px 0;">
            <input type="password" class="form-control"  id="floatingPassword" name="ConfirmPassWord" placeholder="Confirm PassWord" required>
            <label for="floatingPassword">Confirm Password</label>
          </div>
          

          <button class="w-100 btn btn-lg btn-primary" type="submit" style="margin-bottom: 5px;">Sign in</button>
          
        </div>
        </form>
      
  </div>
  